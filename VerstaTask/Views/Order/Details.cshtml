@model VerstaTask.Models.Orders.Order

<h1>Подробности заказа</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <table>
                <tr>
                    <td>Идентификатор:</td>
                    <td> @Html.DisplayFor(modelItem => Model.Id) </td>
                </tr>
                <tr>
                    <td>Город отправителя:</td>
                    <td> @Html.DisplayFor(modelItem => Model.CityFrom) </td>
                </tr>
                <tr>
                    <td>Адрес отправителя:</td>
                    <td> @Html.DisplayFor(modelItem => Model.AddressFrom) </td>
                </tr>
                <tr>
                    <td>Город получателя:</td>
                    <td> @Html.DisplayFor(modelItem => Model.CityTo) </td>
                </tr>
                <tr>
                    <td>Адрес получателя:</td>
                    <td> @Html.DisplayFor(modelItem => Model.AddressTo) </td>
                </tr>
                <tr>
                    <td>Вес груза:</td>
                    <td> @Html.DisplayFor(modelItem => Model.Weight) </td>
                </tr>
                <tr>
                    <td>Дата забора груза:</td>
                    <td> @Html.DisplayFor(modelItem => Model.RecievingDate) </td>
                </tr>
            </table>
        </form>
    </div>
</div>
